@using (Html.BeginForm("SearchRejection", "Search", FormMethod.Post))
{

    if (ViewBag.items != null)
    {
        <br />
        for (int i = 0; i < ViewBag.items.Count; i++)
        {
            <div>
                <h4>Message ID: @ViewBag.items[i].to</h4>
                <h4>Network: @ViewBag.items[i].from</h4>
                <h4>Body: @ViewBag.items[i].body</h4>
                <h4>Date Closed: @ViewBag.items[i].errorCodeLabel</h4>
                <hr style="border:2px solid black" />
            </div>
        }

    }
    else
    {
        if (ViewBag.notFound == true)
        {
            <script>
                alert("No rejected messages for this date.");
            </script>
        }
        <div>
            <br />
            <input type="date" id="rejectionDate" name="rejectionDate" />
            <input type="text" id="number" name="number" />
            <input type="submit" value="Search for Rejected Messages" />
        </div>
    }

}